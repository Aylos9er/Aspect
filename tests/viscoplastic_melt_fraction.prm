#   subsection Function
#     set Function expression = if(y>250000*(1+0.5*sin(x*pi/250000)),0.3,0);if(x<200000,0.3,0.0)
#     set Variable names      = x,y
#   end
# end

# Use a visco plastic material model, which uses the dislocation
# and diffusion creep mechanisms.
subsection Material model
  set Model name = visco plastic
  subsection Visco Plastic

    # set Stress exponents for diffusion creep      = 1, 1
    # set Prefactors for diffusion creep            = 4.5e-15, 4.5e-15
    # set Activation energies for diffusion creep   = 375e3, 375e3
    # set Activation volumes for diffusion creep    = 10e-6, 10e-6
    # set Grain size                                = 1e-3
    # set Grain size exponents for diffusion creep  = 3, 3

    # set Stress exponents for dislocation creep    = 3.5, 3.5
    # set Prefactors for dislocation creep          = 7.4e-15, 7.4e-15
    # set Activation energies for dislocation creep = 530e3, 530e3
    # set Activation volumes for dislocation creep  = 14e-6, 14e-6

    # set Densities                                 = 3300
    # set Reference temperature                     = 1573
    # set Cohesions                                 = 1e50
    # set Maximum yield stress                      = 1e14
    # set Angles of internal friction               = 0
    # set Maximum viscosity                         = 1e26
    # set Minimum viscosity                         = 1e18
    # set Thermal expansivities                     = 2.5e-5

    set Include melting                           = true
  end
end

subsection Mesh refinement
  set Coarsening fraction                      = 0.05
  set Refinement fraction                      = 0.3
  set Initial adaptive refinement              = 0
  set Initial global refinement                = 5
  set Strategy                                 = composition
  set Time steps between mesh refinement       = 0
end

subsection Boundary velocity model
  set Tangential velocity boundary indicators = 0,1,2,3
  set Zero velocity boundary indicators       =
end

# subsection Melt settings
#   set Include melt transport                  = true
# end

subsection Solver parameters
  subsection Stokes solver parameters
    set Use direct solver for Stokes system = true
  end
end

subsection Postprocess
  set List of postprocessors = visualization, boundary pressures, pressure statistics, velocity statistics, temperature statistics, melt statistics
  subsection Visualization
    set List of output variables = density, viscosity, strain rate, stress second invariant, stress, shear stress, strain rate tensor, heat flux map, depth,  named additional outputs
    set Time between graphical output = 1000
    set Write higher order output = false
    set Interpolate output = true
    set Write in background thread = true
    set Number of grouped files = 0
  end
end
