# Listing of Parameters
# ---------------------
# Set up the same model as in the Keller et al., 2013 paper

set Adiabatic surface temperature          = 1623               # default: 0
set CFL number                             = 1.0
set Composition solver tolerance           = 1e-12
set Output directory                       = test
set Nonlinear solver scheme                = IMPES
set Max nonlinear iterations               = 100
set Output directory                       = output

# The number of space dimensions you want to run this program in.
set Dimension                              = 2

# The end time of the simulation. Units: years if the 'Use years in output
# instead of seconds' parameter is set; seconds otherwise.
set End time                               = 1e12

set Pressure normalization                 = surface
set Surface pressure                       = 0
set Resume computation                     = false
set Start time                             = 0

set Use years in output instead of seconds = true
set Use direct solver for Stokes system    = true
set Number of cheap Stokes solver steps    = 0

subsection Discretization
  set Stokes velocity polynomial degree       = 2
  set Use locally conservative discretization = false
end

subsection Compositional fields
  set Number of fields = 1
  set Names of fields = porosity
end


subsection Boundary temperature model
  set Model name = initial temperature

  subsection Initial temperature
    # Temperature at the inner boundary (core mantle boundary). Units: K.
    set Maximal temperature = 3773 # default: 6000

    # Temperature at the outer boundary (lithosphere water/air). Units: K.
    set Minimal temperature = 273  # default: 0
  end

end

subsection Boundary composition model
  set Model name = initial composition
end


subsection Geometry model
  set Model name = box # default: 

  subsection Box
    set X extent  = 6000
    set Y extent  = 4000
  end

end


subsection Gravity model
  set Model name = vertical # default: 


  subsection Vertical
    # Magnitude of the gravity vector in $m/s^2$. The direction is always
    # radially outward from the center of the earth.
    set Magnitude = 10.0 # default: 30
  end

end


subsection Initial conditions
  set Model name = function # default: 
  subsection Function
    set Function constants  = l=250000
    set Function expression = 293
    set Variable names      = x,y
  end
end

subsection Compositional initial conditions
  set Model name = function # default: 
  subsection Function
    set Function constants  = a = 0.2, b = 3000, c = 200, d=0.0, e=2000
    set Function expression = d + a * exp(-((x-b)*(x-b)+(y-e)*(y-e))/(2*c*c))
#    set Function expression = if(y>250000*(1+0.5*sin(x*pi/250000)),0.3,0)
    set Variable names      = x,y
  end
end


subsection Material model

  set Model name = keller # default: 
  subsection Keller
    set Exponential melt weakening factor = 0
    set Reference permeability = 1e-4
    set Reference shear viscosity = 1e18
  end
end


subsection Mesh refinement
  set Coarsening fraction                      = 0.05
  set Refinement fraction                      = 0.3

  set Initial adaptive refinement              = 1                    # default: 2
  set Initial global refinement                = 5                    # default: 2
  set Strategy                                 = composition, minimum refinement function
  set Time steps between mesh refinement       = 5
  set Run postprocessors on initial refinement = true

  subsection Minimum refinement function
    set Function constants = offsetx=3000,r=800,offsety=2000,
    set Coordinate system = cartesian
    set Variable names = x,y
    set Function expression = if(sqrt((x-offsetx)*(x-offsetx)+(y-offsety)*(y-offsety))<r,7,5)
  end
end


subsection Model settings
  set Fixed temperature boundary indicators   = 2,3        # default: 
  set Fixed composition boundary indicators   = 0,1,2,3   
  set Prescribed velocity boundary indicators = #2:function

  set Tangential velocity boundary indicators = 0,1,3
  set Zero velocity boundary indicators       = 2

  set Include melt transport                  = true
  set Melt transport threshold                = 1e-6 # default: 1e-3

end

subsection Boundary velocity model
  subsection Function
    set Function constants = a=0.0016,b=3000,c=400,d=-0.00026797590653
    set Variable names = x,y
    set Function expression = 0;a*exp(-(x-b)^2/(2*c^2))+d
  end
end

subsection Postprocess

  set List of postprocessors = visualization,composition statistics

  subsection Visualization

    set List of output variables      = density, viscosity, thermal expansivity, permeability, melt density, compaction viscosity, nonadiabatic pressure

    # VTU file output supports grouping files from several CPUs into one file
    # using MPI I/O when writing on a parallel filesystem. Select 0 for no
    # grouping. This will disable parallel file output and instead write one
    # file per processor in a background thread. A value of 1 will generate
    # one big file containing the whole solution.
    set Number of grouped files       = 0

    # The file format to be used for graphical output.
    set Output format                 = vtu

    # The time interval between each generation of graphical output files. A
    # value of zero indicates that output should be generated in each time
    # step. Units: years if the 'Use years in output instead of seconds'
    # parameter is set; seconds otherwise.
    set Time between graphical output = 0
  end

end



